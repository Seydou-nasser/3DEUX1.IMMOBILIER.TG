<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_3DEUX1.IMMOBILIER.TG"
             xmlns:helpers="clr-namespace:_3DEUX1.IMMOBILIER.TG.Helpers"
             x:Class="_3DEUX1.IMMOBILIER.TG.App">


    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <helpers:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
            <helpers:FormatageDate x:Key="FormatageDate"/>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
