<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_3DEUX1.IMMOBILIER.TG.Views.AddPostPage"
             xmlns:vm="clr-namespace:_3DEUX1.IMMOBILIER.TG.ViewModels"
             x:DataType="vm:AddPostPageViewModel"
             Title="AddPostPage"
             BackgroundColor="White">

    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="LightGray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>


    <ScrollView VerticalScrollBarVisibility="Always">
        <StackLayout>
            <Label Text="Ajout de post " FontSize="Title" HorizontalOptions="CenterAndExpand"/>
            <VerticalStackLayout Margin="20">
                <Label Text="Nom" FontSize="Subtitle"/>
                <Frame Padding="0" >
                    <Entry Placeholder="Nom" Text="{Binding Post.Name}" Margin="10,0,0,0" TextColor="Black" FontSize="Subtitle"/>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Prix" FontSize="Subtitle"/>
                <Frame Padding="0" >
                    <StackLayout Orientation="Horizontal">
                        <Entry Placeholder="Prix" Text="{Binding Prix}" HorizontalOptions="FillAndExpand" TextColor="Black" 
                               FontSize="Subtitle" Margin="10,0,0,0" Keyboard="Numeric"/>
                        <Label Text="CFA/MOIS" FontSize="Subtitle" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="End" Margin="0,0,10,0"/>
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Numero" FontSize="Subtitle"/>
                <Frame Padding="0" >
                    <StackLayout Orientation="Horizontal">
                        <Label Text="+228" FontSize="Subtitle" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="End" Margin="0,0,10,0"/>
                        <Entry Placeholder="Numero Whatsapp...." Text="{Binding Post.UserNum}" HorizontalOptions="FillAndExpand" TextColor="Black" 
                               FontSize="Subtitle" Margin="10,0,0,0" Keyboard="Telephone"/>
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Localisation" FontSize="Subtitle"/>
                <Picker Title="Appuier ici pour selectionner.."  FontSize="Subtitle" SelectedIndexChanged="Picker_SelectedIndexChanged"
                        x:Name="Picker" ItemsSource="{Binding LocalisationsList}">
                    
                </Picker>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Type" FontSize="Title"/>
                <CollectionView x:Name="TypeCollectionView"
                        SelectionMode="Single" 
                        SelectionChanged="TypeCollectionView_SelectionChanged">
                    <CollectionView.ItemsLayout >
                        <GridItemsLayout HorizontalItemSpacing="50" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Location</x:String>
                            <!--<x:String>Vente</x:String>-->
                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" >
                                <Label Text="{Binding .}" FontSize="Subtitle"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            <Frame Padding="0" Margin="20,0,20,20" x:Name="AvanceFrame">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Avance : " FontSize="Subtitle" VerticalOptions="CenterAndExpand"
                            HorizontalOptions="End" Margin="10,0,0,0"/>
                    <Entry Placeholder="Avance.." HorizontalOptions="CenterAndExpand" TextColor="Black" 
                    FontSize="Subtitle" Margin="0,0,10,0" Text="{Binding Avance}" Keyboard="Numeric"/>
                </StackLayout>
            </Frame>
            <!--<VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Type(Vente, Location.....)" FontSize="Subtitle"/>
                <Picker Title="Selection" FontSize="Subtitle" SelectedIndexChanged="Picker2_SelectedIndexChanged"
                        x:Name="Picker2">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Location</x:String>
                            <x:String>Vente</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>-->
            <VerticalStackLayout Margin="20,0,20,20">
                <Label Text="Categorie" FontSize="Title"/>
                <CollectionView x:Name="CategoryCollectionView" 
                        SelectionMode="Single"
                        SelectionChanged="CategoryCollectionView_SelectionChanged" >
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Span="2" Orientation="Vertical"  />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Maison</x:String>
                            <x:String>Appartement</x:String>
                            <x:String>Salle de Reuinion</x:String>
                            <!--<x:String>Voiture</x:String>-->
                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" RowDefinitions="auto">
                                <Label Text="{Binding .}" FontSize="Subtitle" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <Frame Padding="0" Margin="20,0,20,20">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Superficie du terrain : " FontSize="Subtitle" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="End" Margin="10,0,0,0"/>
                    <Entry Placeholder="Superficie..." HorizontalOptions="CenterAndExpand" TextColor="Black" 
                                FontSize="Subtitle" Margin="0,0,10,0" Text="{Binding Superficie}" Keyboard="Numeric"/>
                </StackLayout>
            </Frame>

            <Frame Padding="0" Margin="20,0,20,20">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Chambre : " FontSize="Subtitle" VerticalOptions="CenterAndExpand"
                                HorizontalOptions="End" Margin="10,0,0,0"/>
                    <Entry Placeholder="Chambre..." HorizontalOptions="CenterAndExpand" TextColor="Black" 
                                FontSize="Subtitle" Margin="0,0,10,0" Text="{Binding Chambre}" Keyboard="Numeric"/>
                </StackLayout>
            </Frame>

            <Button Text="Selection de photo" BackgroundColor="Gray" Margin="20">
                <Button.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectImageCommand}"/>
                </Button.GestureRecognizers>
            </Button>

            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Images}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Image HeightRequest="100" WidthRequest="100" Margin="10" Source="{Binding .}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>

            <VerticalStackLayout Spacing="5" Margin="20,0,20,20">
                <Label Text="Desciption" FontSize="Title"/>
                <Frame Padding="5">
                    <Editor Text="{Binding Description}" Placeholder="Description du post...."
                            PlaceholderColor="LightGray" IsTextPredictionEnabled="True" AutoSize="TextChanges"/>
                </Frame>
            </VerticalStackLayout>
            
            <Button Text="Envoyer" BackgroundColor="Gray" Margin="20" VerticalOptions="EndAndExpand" 
                    Command="{Binding EnvoyerCommand}"/>

            <Button Text="Previsualiser le rendu !" BackgroundColor="Gray" Margin="20" VerticalOptions="EndAndExpand" 
                    Command="{Binding PrevisualisationCommand}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>